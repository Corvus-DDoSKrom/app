<!DOCTYPE html>
<html lang="es">
<%- include('../components/head.ejs') %>
<body>
<%- include('../components/header.ejs') %>
<section class="is-title-bar">
  <div class="flex flex-col md:flex-row items-center justify-between space-y-6 md:space-y-0">
    <ul>
      <li>Admin</li>
      <li>Clientes</li>
    </ul>
  </div>
</section>
<section class="is-hero-bar">
  <div class="flex flex-col md:flex-row items-center justify-between space-y-6 md:space-y-0">
    <h1 class="title">
      Registrar Clientes
    </h1>
    <a href="cliens" class="button light">Ver lista de Clientes</a>
  </div>
</section>
<section class="section main-section">
  <div class="card mb-6">
    <header class="card-header">
      <p class="card-header-title">
        <span class="icon"><i class="mdi mdi-ballot"></i></span>
        Formulario de Registro
      </p>
    </header>
    <% if (clients) { %>
      <div class="card-content">
        <form method="post" action="/updateClients">
          <div class="field">
            <label class="label">Datos Personales</label>
            <div class="field-body">
              <div class="field">
                <input id="idClients" name="idClients" value="<%= clients.idClients %>" hidden>
                <div class="control icons-left">
                  <input class="input" type="text" autocomplete="off" name="nameClients" id="nameClients" placeholder="Nombre Completo" value="<%= clients.nameClients %>">
                  <span class="icon left"><i class="mdi mdi-account"></i></span>
                </div>
              </div>
              <div class="field">
                <div class="control icons-left">
                  <input class="input" type="text" autocomplete="off" name="companyClients" id="companyClients" placeholder="Razón Social" value="<%= clients.companyClients %>">
                  <span class="icon left"><i class="mdi mdi-account"></i></span>
                </div>
              </div>
              <div class="field">
                <div class="control icons-left">
                  <input class="input" type="text" autocomplete="off" name="documentClients" id="documentClients" placeholder="C.I o RUC" value="<%= clients.documentClients %>">
                  <span class="icon left"><i class="mdi mdi-mail"></i></span>
                </div>
              </div>
              <div class="field">
                <div class="control icons-left icons-right">
                  <input class="input" type="email" autocomplete="off" name="mailClients" id="mailClients" placeholder="Correo Electrónico" value="<%= clients.mailClients %>">
                  <span class="icon left"><i class="mdi mdi-at"></i></span>
                </div>
              </div>
            </div>
          </div>
          <div class="field">
            <div class="field-body">
              <div class="field">
                  <div class="control icons-left">
                    <input class="input" type="tel" autocomplete="off" name="phoneClients" id="phoneClients" placeholder="Celular" value="<%= clients.phoneClients %>">
                    <span class="icon left"><i class="mdi mdi-cellphone"></i></span>
                  </div>
              </div>
            </div>
          </div>
          <div class="field">
            <div class="field-body">
              <div class="field">
                  <div class="control icons-left">
                    <input class="input" type="text" autocomplete="off" name="directionClients" id="directionClients" placeholder="Dirección" value="<%= clients.directionClients %>">
                    <span class="icon left"><i class="mdi mdi-map-marker-radius"></i></span>
                  </div>
              </div>
            </div>
          </div>
          <hr>
          <div class="field grouped">
            <div class="control">
              <input type="submit" class="button green" value="Guardar"></input>
            </div>
            <div class="control">
              <button type="reset" class="button red">
                Cancelar
              </button>
            </div>
          </div>
        </form>
      </div>
    <% } %>
  </div>
</section>
<%- include('../components/footer.ejs') %>
<script type="text/javascript" src="../assets/js/main.min.js?v=1628755089081"></script>
<script type="text/javascript" src="../assets/js/Vanilla-DataTables.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js"></script>
<script type="text/javascript" src="../assets/js/chart.sample.min.js"></script>
</body>
</html>